<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/standard_8">

    <TextView
        android:id="@+id/txv_dialog_player_request_reply__title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/standard_8" />

    <TextView
        android:id="@+id/txv_dialog_player_request_reply__user"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/standard_8" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:ellipsize="marquee"
            android:padding="@dimen/standard_8"
            android:singleLine="true"
            android:text="@string/throw_difficulty_value" />

        <TextView
            android:id="@+id/txv_dialog_player_request_reply__difficulty"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/standard_8"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/zero" />
    </LinearLayout>

    <include
        layout="@layout/view_horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_1"
        android:layout_marginVertical="@dimen/standard_4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:ellipsize="marquee"
            android:padding="@dimen/standard_8"
            android:singleLine="true"
            android:text="@string/throw_base_value" />

        <TextView
            android:id="@+id/txv_dialog_player_request_reply__base"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/standard_8"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="@string/zero" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:labelFor="@id/edt_dialog_player_request_reply__bonus"
            android:padding="@dimen/standard_8"
            android:singleLine="true"
            android:text="@string/throw_bonus_value" />

        <EditText
            android:id="@+id/edt_dialog_player_request_reply__bonus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/standard_8"
            android:layout_weight="0.5"
            android:ems="10"
            android:gravity="center"
            android:importantForAutofill="no"
            android:inputType="numberSigned"
            android:lines="1"
            android:text="@string/zero" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_dialog_player_request_reply__send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/standard_12"
        android:text="@string/text_send_reply" />

</LinearLayout>