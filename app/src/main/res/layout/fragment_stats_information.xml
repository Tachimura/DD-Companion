<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_fragments">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remaining_points_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txv_fragment_stats_information__useablepoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/standard_8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="@string/stat_forza_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fragment_stats_information__str_minus"
                android:layout_width="@dimen/standard_48"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/minus" />

            <TextView
                android:id="@+id/txv_fragment_stats_information__str"
                android:layout_width="@dimen/standard_96"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_8"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_fragment_stats_information__str_plus"
                android:layout_width="@dimen/standard_48"
                android:layout_height="wrap_content"
                android:text="@string/plus" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/standard_8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="@string/stat_destrezza_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fragment_stats_information__dex_minus"
                android:layout_width="@dimen/standard_48"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/minus" />

            <TextView
                android:id="@+id/txv_fragment_stats_information__dex"
                android:layout_width="@dimen/standard_96"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_8"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_fragment_stats_information__dex_plus"
                android:layout_width="@dimen/standard_48"
                android:layout_height="wrap_content"
                android:text="@string/plus" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/standard_8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="@string/stat_costituzione_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fragment_stats_information__cos_minus"
                android:layout_width="@dimen/standard_48"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/minus" />

            <TextView
                android:id="@+id/txv_fragment_stats_information__cos"
                android:layout_width="@dimen/standard_96"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_8"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_fragment_stats_information__cos_plus"
                android:layout_width="@dimen/standard_48"
                android:layout_height="wrap_content"
                android:text="@string/plus" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/standard_8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="@string/stat_intelligenza_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fragment_stats_information__int_minus"
                android:layout_width="@dimen/standard_48"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/minus" />

            <TextView
                android:id="@+id/txv_fragment_stats_information__int"
                android:layout_width="@dimen/standard_96"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_8"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_fragment_stats_information__int_plus"
                android:layout_width="@dimen/standard_48"
                android:layout_height="wrap_content"
                android:text="@string/plus" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/standard_8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="@string/stat_saggezza_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fragment_stats_information__sag_minus"
                android:layout_width="@dimen/standard_48"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/minus" />

            <TextView
                android:id="@+id/txv_fragment_stats_information__sag"
                android:layout_width="@dimen/standard_96"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_8"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_fragment_stats_information__sag_plus"
                android:layout_width="@dimen/standard_48"
                android:layout_height="wrap_content"
                android:text="@string/plus" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/standard_8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="@string/stat_carisma_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_fragment_stats_information__car_minus"
                android:layout_width="@dimen/standard_48"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/minus" />

            <TextView
                android:id="@+id/txv_fragment_stats_information__car"
                android:layout_width="@dimen/standard_96"
                android:layout_height="wrap_content"
                android:padding="@dimen/standard_8"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_fragment_stats_information__car_plus"
                android:layout_width="@dimen/standard_48"
                android:layout_height="wrap_content"
                android:text="@string/plus" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>